<h4 class="mt-3">コメント<%= diary.diary_comments.count %>件</h4>
<% diary.diary_comments.each do |diary_comment| %>
<div class="media border mb-3">
<%= attachment_image_tag diary_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: "60x60", class: "bd-placeholder-img align-self-center mx-3 rounded-circle" %>
<div class="media-body ml-4 p-3">
<p><%= diary_comment.created_at.strftime('%Y/%m/%d') %><%#= diary_comment.comment %></p>
<p><%= diary_comment.comment %></p>
<% if diary_comment.user == current_user %>
<%= link_to "削除", diary_diary_comment_path(diary_comment.diary, diary_comment), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
<% end %>
</div>
</div>
<% end %>