<h1>記録</h1>
<%= form_with model: @record, local:true do |f| %>
  <h4>ランニング日</h4>
  <%= f.datetime_select :start_time %>
  <h4>距離</h4>
  <%= f.text_field :distance %>km
  <h4>タイム</h4>
  <%= f.number_field :hour %>:<%= f.number_field :minute %>:<%= f.number_field :second %>
  <h4>ペース</h4>
  <%= f.number_field :pace_minute %>:<%= f.number_field :pace_second %>
  <%= link_to 'Back', records_path %> |
  <%= f.submit 'Update' %>
  <%= link_to 'Destroy', record_path(@record), method: :delete, data: { confirm: '本当に消しますか？' } %>
<% end %>