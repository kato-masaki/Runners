<div class="container">

  <div class="row justify-content-center my-4">
    <h3>記録編集</h3>
  </div>

  <div class="row justify-content-center">
    <%= form_with model: @record, local:true do |f| %>
    <h5>ランニング日時</h5>
    <%= f.datetime_select :start_time %>
    <h5 class="mt-3">距離</h5>
    <%= f.text_field :distance, size: 7 %> km
    <h5 class="mt-3">タイム</h5>
    <%= f.text_field :hour, size: 7 %> : <%= f.text_field :minute, size: 7 %> : <%= f.text_field :second, size: 7 %>
    <h5 class="mt-3">ペース</h5>
    <%= f.text_field :pace_minute, size: 7 %> : <%= f.text_field :pace_second, size: 7 %> / km
    <div class="d-flex justify-content-around mt-4">
    <%= f.submit "更新" %>
    <%= link_to "削除", record_path(@record), method: :delete, class: "btn btn-sm btn-danger"; %>
    </div>
    <div class="mt-4">
      <%= link_to "戻る", records_path, class: "far fa-arrow-alt-circle-left nav-link text-dark"; %>
    </div>
    <% end %>
  </div>

  </div>
</div>