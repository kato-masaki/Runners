
<% if @model == "user" %>


<h2 class="text-center">ユーザーネーム "<%= @content %>" の検索結果</h2>
<div class="container" style="width: 1000px;">

  <!--検索ボックス-->
    <%= render 'search/search-box' %>

<table class="table border-bottom">
  <tbody>
    <% @data.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user) do %>
          <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class: "rounded-circle"; %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td>フォロー数：<%= user.followings.count %></td>
        <td>フォロワー数：<%= user.followers.count %></td>
        <% if current_user != user %>
        <% if current_user.following?(user) %>
        <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
        <% else %>
        <td><%= link_to "フォローする", user_relationships_path(user.id), method: :POST %></td>
        <% end %>
        <% else %><td colspan="1"></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</div>


<% elsif @model == "diary" %>


<h2 class="text-center">ダイアリー"<%= @content %>" の検索結果</h2>

<div class="container" style="width: 1000px;">

  <!--検索ボックス-->
    <%= render "search/search-box" %>


  <!--投稿一覧-->
  <h2 class="row justify-content-center border-bottom">新着</h2>

    <%= render "diaries/index", diaries: @data %>

<div class="row justify-content-center my-5">
  <%= paginate @data %>
</div>

</div>


<% end %>
