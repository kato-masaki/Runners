<% if @model == "user" %>
<h2>Users search for "<%= @content %>"</h2>

<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @data.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50) %></td>
        <!--, fallback: "no-image-icon.jpg"-->
        <td><%= user.name %></td>
        <td>フォロー数：<%= user.followings.count %></td>
        <td>フォロワー数：<%= user.followers.count %></td>
        <% if current_user != user %>
        <% if current_user.following?(user) %>
        <td><%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete %></td>
        <% else %>
        <td><%= link_to 'フォローする', user_relationships_path(user.id), method: :POST %></td>
        <% end %>
        <% else %><td colspan="1"></td>
        <% end %>
        <td><%= link_to 'Show', user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% elsif @model == "diary" %>

<h2>Diaries search for "<%= @content %>"</h2>

<% @data.each do |diary| %>
<div>
  <%= link_to diary_path(diary.id) do %>
    <%= attachment_image_tag diary, :image %>
  <% end %>
  <p>投稿ユーザー画像：<%= attachment_image_tag diary.user, :profile_image, :fill, 60, 60 %>
  <!--, fallback: "no_image.jpg"-->
  <p>【距離】<%= diary.distance %></p>
  <p>【タイム】<%= diary.hour %>:<%= diary.minute %>:<%= diary.second %></p>
  <p>【ペース】<%= diary.pace_minute %>:<%= diary.pace_second %></p>
  <p>【説明】<%= diary.caption %></p>
  <p>ユーザーネーム：<%= diary.user.name %></p>
  <p><%= link_to "#{diary.diary_comments.count} コメント", diary_path(diary.id) %></p>
</div>
<% end %>
<%#= paginate @data %>

<% end %>
