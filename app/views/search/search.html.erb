
<% if @model == "user" %>

  <h2 class="text-center">ユーザーネーム "<%= @content %>" の検索結果</h2>
    <div class="container" style="width: 1000px;">
    <!--検索ボックス-->
      <%= render 'search/search-box' %>
    <!--ユーザー一覧-->
      <%= render 'users/index', users: @data %>
    </div>

<% elsif @model == "diary" %>

  <h2 class="text-center">ダイアリー"<%= @content %>" の検索結果</h2>
    <div class="container" style="width: 1000px;">
    <!--検索ボックス-->
      <%= render "search/search-box" %>
    <!--投稿一覧-->
  <h2 class="row justify-content-center border-bottom">新着</h2>
      <%= render "diaries/index", diaries: @data %>

    <div class="row justify-content-center my-5">
      <%= paginate @data %>
    </div>

    </div>

<% end %>
