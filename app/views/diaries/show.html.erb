<div class="container" style="width: 70%;">
  <div class="row justify-content-center">
    
    <!--投稿詳細-->
    <div id="diary_<%= @diary.id %>" class="card m-3" style="width: 60%; height: 100%;">
      <%= attachment_image_tag @diary, :image, :fill, 300, 200 %>
      <div class="card-body">

        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            距離　　　<%= @diary.distance %> km<br>
            時間　　　<%= sprintf("%02d", @diary.hour) %> : <%= sprintf("%02d", @diary.minute) %> : <%= sprintf("%02d", @diary.second) %><br>
            ペース　　<%= sprintf("%02d", @diary.pace_minute) %> : <%= sprintf("%02d", @diary.pace_second) %> / km
          </li>
        </ul><hr>

          <p><%= @diary.caption %></p>
          <p>
            <%= link_to user_path(@diary.user) do %>
            <%= attachment_image_tag @diary.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class:"mt-3 rounded-circle"; %>
            <% end %>
            </p>
          <p><%= @diary.user.name %></p>
          <p class="favorite-btn">
            <%= render "favorites/favorite-btn", diary: @diary %>
          </p>
          <p>
            <%= @diary.diary_comments.count %>コメント
          </p>

          <p>投稿日時：<%= @diary.created_at.strftime('%Y/%m/%d') %></p>
          <% if @diary.user == current_user %>
          <%= link_to "削除", diary_path(@diary), method: :delete %>
          <% end %>
          <hr>

          <!--コメントエリア-->
          <div class="comments">
            <div class="comments card-text">
              <h4 class="mt-3">コメント<%= @diary.diary_comments.count %>件</h4>
              <% @diary.diary_comments.each do |diary_comment| %>
              <div class="media border mb-3">
                <%= attachment_image_tag diary_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: "60x60", class: "bd-placeholder-img align-self-center mx-3 rounded-circle" %>
                <div class="media-body ml-4 p-3">
                  <p><%= diary_comment.created_at.strftime('%Y/%m/%d') %><%#= diary_comment.comment %></p>
                  <p><%= diary_comment.comment %></p>
                  <% if diary_comment.user == current_user %>
                  <%= link_to "削除", diary_diary_comment_path(diary_comment.diary, diary_comment), method: :delete, class: "btn btn-danger pull-right" %>
                  <% end %>
                </div>
              </div>
              <% end %>
             </div>
             <hr>
             <div class="new-comment card-text">
               <%= form_with(model:[@diary, @diary_comment]) do |f| %>
               <div class="form-group">
                 <label for="exampleFormControlTextarea1">コメントする</label>
                 <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
               </div>
              <%= f.submit "送信する", class:"btn btn-lg btn-info mt-2 float-right" %>
              <% end %>
             </div>

          </div>
      </div>

  </div>
</div>