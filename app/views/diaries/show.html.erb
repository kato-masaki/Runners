<div class="post-body">
  <%= attachment_image_tag @diary, :image %>
  <p>【距離】<%= @diary.distance %></p>
  <p>【タイム】<%= @diary.hour %>:<%= @diary.minute %>:<%= @diary.second %></p>
  <p>【ペース】<%= @diary.pace_minute %>:<%= @diary.pace_second %></p>
  <p>【説明】<%= @diary.caption %></p>
  <p>ユーザーネーム：<%= @diary.user.name %></p>
  <p>投稿日時：<%= @diary.created_at.strftime('%Y/%m/%d') %></p>
  <% if @diary.user == current_user %>
    <%= link_to "削除", diary_path(@diary), method: :delete %>
  <% end %>
  <% if @diary.favorited_by?(current_user) %>
    <p>
      <%= link_to diary_favorites_path(@diary), method: :delete do %>
        ★<%= @diary.favorites.count %> GOOD
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to diary_favorites_path(@diary), method: :post do %>
        ☆<%= @diary.favorites.count %> GOOD
      <% end %>
    </p>
  <% end %>
</div>

<div class="comments">
<p>コメント件数：<%= @diary.diary_comments.count %></p>
<% @diary.diary_comments.each do |diary_comment| %>
  <p><%= attachment_image_tag diary_comment.user, :profile_image, :fill, 60, 60 %></p>
  <!--, fallback: "no_image.jpg"-->
  <%= diary_comment.user.name %>
  <%= diary_comment.created_at.strftime('%Y/%m/%d') %><%= diary_comment.comment %>
  <% if diary_comment.user == current_user %>
  <div class="comment-delete">
    <%= link_to "削除", diary_diary_comment_path(diary_comment.diary, diary_comment), method: :delete %>
  </div>
  <% end %>

<% end %>
</div>
<div class="new-comment">
<%= form_with(model:[@diary, @diary_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>