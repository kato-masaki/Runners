<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
  <!--#, fallback: "no_image.jpg"-->
  <h3 class="profile-name"><%= @user.introduction %></h3>
  <h3 class="profile-name"><%= @user.residence %></h3>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>


<% @diaries.each do |diary| %>
<div>
  <%= link_to diary_path(diary.id) do %>
    <%= attachment_image_tag diary, :image %>
  <% end %>
  <p>投稿ユーザー画像：<%= attachment_image_tag diary.user, :profile_image, :fill, 60, 60 %></p>
  <!--, fallback: "no_image.jpg"-->
  <p>【距離】<%= diary.distance %></p>
  <p>【タイム】<%= diary.hour %>:<%= diary.minute %>:<%= diary.second %></p>
  <p>【ペース】<%= diary.pace_minute %>:<%= diary.pace_second %></p>
  <p>【説明】<%= diary.caption %></p>
  <p>ユーザーネーム：<%= diary.user.name %></p>
  <p><%= link_to "#{diary.diary_comments.count} コメント", diary_path(diary.id) %></p>
</div>
<% end %>
<%= paginate @diaries %>
